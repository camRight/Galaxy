	<!-- Modal 1 -->
	<div class="modal fade" id="add-a-user" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
		aria-labelledby="staticBackdropLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h3 class="modal-title" id="staticBackdropLabel">Add Household Members</h3>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<div class="container">
						<div class="CRUD-user-dashboard">
							{{!-- start ADD USER form --}}
							<form id="cms" class="add">
								<div class="input-group">

									{{!-- start ADD USER text/input form --}}
									<input type="text" class="form-control" placeholder="i.e. Frida Kahlo"
										id="name-input">
									{{!-- end ADD USER text form --}}
									<div class="input-group-append">
										<button type="submit" class="btn btn-primary">Submit</button>
									</div>
								</div>
							</form>
							{{!-- end input form group --}}
							{{!-- should form end here? --}}
							{{!-- start user db history --}}

							<form id="cms" class="add">
								<h4 class="pt-3">Added users:</h4>
								<hr>
								<ul class="list-group">
									{{#each HouseMember}}
									<li class="list-group-item">
										{{name}}
										<button type="button"
											class="btn btn-outline-warning">Delete</button>&nbsp;&nbsp;<button
											type="button" class="btn btn-outline-secondary">Edit</button></li>
									{{/each}}
								</ul>
							</form>
							{{!-- end ADD USER form --}}
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

				</div>
			</div>
		</div>
	</div>
	{{!-- end modal 1 --}}

	{{!-- start modal 2 --}}


	<!-- Modal Add Task-->
	<div class="modal fade" id="add-a-task" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true"
		data-bs-backdrop="static" data-bs-keyboard="false">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Chores & Tasks</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<div class="form-group">
						<label for="chore-name-title">Add a chore:</label>
						<input type="text" class="form-control" id="title" placeholder="i.e. Feed Dog">
						<br>
						{{!-- start description input text area --}}
						<div class="form-group">
							{{!-- NOTE: user can break lines using enter in text area. consider making 1 line only, or think about how we display chore details. --}}
							<textarea class="form-control" id="exampleFormControlTextarea1"
								placeholder="i.e. Feed Mittens one-third a cup of kibble..." rows="3"></textarea>
						</div>
						{{!-- end description input --}}
						<div class="row">
							<div class="form-group">
								<label for="category">Select who is assigned this task:</label>
								<select class="custom-select" id="category">
									<option value="name1">Didier Drogba</option>
									<option value="name2">Amelia Earhart</option>
									<option value="name3">Frida Kahlo</option>
								</select>
							</div>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
					<button type="button" class="btn btn-primary">Save changes</button>
				</div>
			</div>
		</div>
	</div>

